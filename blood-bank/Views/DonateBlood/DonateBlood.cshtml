@model AdminHomeData
<head>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src="https://kit.fontawesome.com/52b9d8260b.js"
            crossorigin="anonymous"></script>
    <link href="~/css/donate_blood.css" rel="stylesheet" />
</head>
<div class="third">
    <div class="left-table">
        <h1 class="home-text">
            Eliminate blood scarcity in
            <span style="color: black">Bangladesh</span>
            <span class="by-part">by</span>
            <p class="by-part">
                donating your <span style="color: #e8e337">time</span> to make an
                impact,your
                <span style="color: #e8e337">blood</span>
                to save lives or your <span style="color: #e8e337">money</span>
                to create a holistic blood managemnet cycle.
            </p>
        </h1>
        <h1 style="text-align: center; margin: 50px;">Donate now</h1>
        <div style="text-align: center;">
            <a class="three-options" asp-controller="DonateBlood" asp-action="DonateBlood">
                <i class="fa-sharp fa-solid fa-droplet"
                   style="padding-right: 10px"></i>
                Blood
            </a>
            <a class="three-options" asp-controller="DonateBlood" asp-action="DonateTime">
                <i class="fa-regular fa-clock" style="padding-right: 10px"></i>Time
            </a>
            <a class="three-options" asp-controller="DonateBlood" asp-action="DonateMoney">
                <i class="fa-solid fa-hand-holding-heart"
                   style="padding-right: 10px"></i>Fundraiser
            </a>
        </div>
    </div>
</div>
<section>
    <h1 class="text-center text-danger">
        @ViewBag.Stats
    </h1>
    <div class="form-out-div">
        <div class="nece">
            <div class="nece_2">
                <div class="out-contain">
                    <div class="in-contain">
                        <div>
                            <img src="/images/blood_donate_phot.png"
                                 alt="" />
                        </div>
                        <div>
                            <form style="width: 390px"
                                  method="post">
                                <span class="form-span"> Please send us your details for Donation of Blood</span>
                                <div class="wrap-input">
                                    <input class="in"
                                           type="text"
                                           asp-for="UserId"
                                           placeholder="UserID"
                                           required />
                                    <span class="shadow-input"></span>
                                </div>
                                <div class="wrap-input">
                                    <input class="in"
                                           type="text"
                                           asp-for="UserName"
                                           placeholder="Name"
                                           required />
                                    <span class="shadow-input"></span>
                                </div>
                                <div class="wrap-input">
                                    <input class="in"
                                           type="text"
                                           asp-for="Number"
                                           placeholder="Number"
                                           required />
                                    <span class="shadow-input"></span>
                                </div>
                                <div class="wrap-input">
                                    <input class="in"
                                           type="text"
                                           asp-for="Date"
                                           placeholder="Donation Date(DD.MM.YYYY)"
                                           required />
                                    <span class="shadow-input"></span>
                                </div>
                                <div class="wrap-input">
                                    <input class="in"
                                           type="text"
                                           asp-for="Address"
                                           placeholder="Address"
                                           required />
                                    <span class="shadow-input"></span>
                                </div>
                                <div class="wrap-input">
                                    <input class="in"
                                           type="text"
                                           asp-for="Email"
                                           placeholder="Email"
                                           required />
                                    <span class="shadow-input"></span>
                                </div>
                                <div style="display: flex; justify-content: space-between;">
                                    <div class="wrap-input">
                                        <label for="blood-group"></label>
                                        <select asp-for="BloodGroup"
                                                class="in"
                                                required>
                                            <option disabled selected>Select Blood Group</option>
                                            <option value="O+">O+</option>
                                            <option value="O-">O-</option>
                                            <option value="A+">A+</option>
                                            <option value="A-">A-</option>
                                            <option value="B+">B+</option>
                                            <option value="B-">B-</option>
                                            <option value="AB+">AB+</option>
                                            <option value="AB-">AB-</option>
                                        </select>
                                    </div>
                                </div>
                                <div style="
                        display: flex;
                        flex-wrap: wrap;
                        justify-content: center;
                      ">
                                    <button class="sub-btn" type="submit">
                                        <span>Submit</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>