@model BloodStory
<head>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src="https://kit.fontawesome.com/52b9d8260b.js"
            crossorigin="anonymous"></script>
    <link href="~/css/donate_blood.css" rel="stylesheet" />
</head>
<div class="form-out-div">
    <div class="nece">
        <div class="nece_2">
            <div class="out-contain">
                <div class="in-contain">
                    <div>
                        <img src="~/images/sharestory.png" />
                    </div>
                    <div>
                        <form style="width: 390px"
                              method="post" enctype="multipart/form-data">
                            <span class="form-span"> Please send us your details to show your story on our page </span>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="UserId"
                                       placeholder="UserID"
                                       required />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="UserName"
                                       placeholder="Name"
                                       required />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="Number"
                                       placeholder="Number"
                                       required />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="Date"
                                       placeholder="Current Date(DD.MM.YYYY)"
                                       required />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="Email"
                                       placeholder="Email"
                                       required />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <textarea class="in"
                                          type="text"
                                          asp-for="Story"
                                          placeholder="Story">
                                </textarea>
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="file"
                                       name="pfile"
                                       placeholder="Imageurl"
                                       />
                                <span class="shadow-input"></span>
                            </div>
                            <div style="
                        display: flex;
                        flex-wrap: wrap;
                        justify-content: center;
                      ">
                                <button class="sub-btn" type="submit">
                                    <span>Submit</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>