@model ReportData
<link href="~/css/adminmanagement.css" rel="stylesheet" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp">
<div class="container">
    <aside>
        <div class="top">
            <h2>Hello, Admin</h2>
            <div class="close" id="close-btn">
                <span class="material-icons-sharp">close</span>
            </div>
        </div>
        <div class="sidebar">
            <a asp-controller="AdminHome" asp-action="AdminHome" style="text-decoration:none; margin-bottom:5px;">
                <i class="bi bi-tools" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Dashboard</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="AdminManagement">
                <i class="bi bi-calendar-check-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Event Management</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="HospitalManagement">
                <i class="bi bi-hospital-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Hospital Management</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminReport" asp-action="AdminReport">
                <i class="bi bi-clipboard2-data-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Reports</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="Users">
                <i class="bi bi-people-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Users</h3>
            </a>
        </div>
    </aside>
    <!-- End of Sidebar -->
    <main>
        <h1>Add Hospital</h1>
        <!--End of Insights-->
        <div class="recent-orders">
            <form method="post">
                <div class="mb-3 row">
                    <label asp-for="UserId" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" asp-for="UserId">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" asp-for="UserName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Status" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" asp-for="Status">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Bloodgroup" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" asp-for="Bloodgroup">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Number" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" asp-for="Number">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" required class="form-control" asp-for="Amount">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Action" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select required name="action"
                                class="form-control">
                            <option disabled selected>Select Action</option>
                            <option value="Completed">Completed</option>
                            <option value="Pending">Pending</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Date" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" asp-for="Date">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Location" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" asp-for="Location">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Count" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" hidden readonly class="form-control" asp-for="Count">
                    </div>
                </div>
                <div style="display:flex; justify-content:center">
                    <button type="submit" class="btn btn-outline-primary"><i class="bi bi-droplet-half"></i>Update Hospital Detail</button>
                </div>
            </form>
        </div>
    </main>
    <!------End of main ----------->
</div>
<script src="~/js/orders.js"></script>
<script src="~/js/admin_dashboard.js"></script>