@model List<AdminHomeData>
<link href="~/css/admin_dashboard.css" rel="stylesheet" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp">
<div class="container">
    <aside>
        <div class="top" style="margin-left:30px;">
            <h2>Hello, Admin</h2>
            <div class="close" id="close-btn">
                <span class="material-icons-sharp">close</span>
            </div>
        </div>
        <div class="sidebar">
            <a asp-controller="AdminHome" asp-action="AdminHome" style="text-decoration:none; margin-bottom:5px;">
                <i class="bi bi-tools" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Dashboard</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="AdminManagement">
                <i class="bi bi-calendar-check-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Event Management</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="HospitalManagement">
                <i class="bi bi-hospital-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Hospital Management</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminReport" asp-action="AdminReport">
                <i class="bi bi-clipboard2-data-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Reports</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="Users">
                <i class="bi bi-people-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Users</h3>
            </a>
        </div>
    </aside>
    <!-- End of Sidebar -->
    <main>
        <h1>Dashboard</h1>
        <div class="insights">
            <div class="sales">
                <span class="material-icons-sharp">analytics</span>
                <div class="middle">
                    <div class="left">
                        <h3>Requests</h3>
                        <h1>@ViewBag.Requests</h1>
                    </div>
                </div>
                <small class="text-muted">Last 24 Hours</small>
            </div>
            <!-------End of Sales---->
            <div class="expenses">
                <span class="material-icons-sharp">bar_chart</span>
                <div class="middle">
                    <div class="left">
                        <h3>Hospitals Connected</h3>
                        <h1>@ViewBag.Hospitals</h1>
                    </div>
                </div>
                <small class="text-muted">Last 24 Hours</small>
            </div>
            <!-------End of Expenses---->
            <div class="income">
                <span class="material-icons-sharp">stacked_line_chart</span>
                <div class="middle">
                    <div class="left">
                        <h3>Funds raised</h3>
                        <h1>$@ViewBag.Sum</h1>
                    </div>
                </div>
                <small class="text-muted">Last 24 Hours</small>
            </div>
            <!-------End of Income---->
        </div>
        <!--End of Insights-->
        <div class="recent-orders">
            <h2>Users</h2>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>User id</th>
                        <th>User Name</th>
                        <th>Date</th>
                        <th>Blood Group</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td class="text-dark" style="font-size:20px; padding-top:20px">@obj.UserId</td>
                            <td class="text-dark" style="font-size:20px; padding-top:20px">@obj.UserName</td>
                            <td class="text-dark" style="font-size:20px; padding-top:20px">@obj.Date</td>
                            <td class="text-dark" style="font-size:20px; padding-top:20px">@obj.BloodGroup</td>
                            <td class="text-dark" style="font-size:20px; padding-top:20px">@obj.Address</td>
                            <td class="text-dark" style="font-size:20px; padding-top:20px">@obj.Status</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="AdminHome" asp-action="AdminRequests" asp-route-id="@obj.UserId" asp-route-status="@obj.Status" asp-route-username="@obj.UserName" asp-route-number="@obj.Number" asp-route-bloodgroup="@obj.BloodGroup" asp-route-date="@obj.Date" asp-route-address="@obj.Address" asp-route-count="@obj.Count" asp-route-email="@obj.Email" class="text-success" style="font-size:20px">
                                        <i class="bi bi-check-circle-fill"></i>
                                    </a>
                                    <a asp-controller="AdminHome" asp-action="Delete" asp-route-id="@obj.Count" class="text-danger mx-2" style="font-size:20px">
                                        <i class="bi bi-x-circle-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
    <!------End of main ----------->
    <div class="right">
        <div class="top">
            <button id="menu-btn">
                <span class="material-icons-sharp">menu</span>
            </button>
            <div class="theme-toggler">
                <span class="material-icons-sharp active">light_mode</span>
                <span class="material-icons-sharp">dark_mode</span>
            </div>
            <div class="profile">
                <div class="info">
                    <p>Hey, <b>Daniel</b></p>
                    <small class="text-muted">Admin</small>
                </div>
                <div class="profile-photo">
                    <img src="/images/profile-1.jpg" alt="">
                </div>
            </div>
            <a asp-controller="Home" asp-action="LogOut" style="text-decoration:none;">
                <span class="material-icons-sharp">logout</span>
                <h3 style="margin-top:6px">Logout</h3>
            </a>
        </div>
        <!--End of top-->
        <div class="recent-updates">
            <h2>Recent Updates</h2>
            <div class="updates">
                <div class="update">
                    <div>

                    </div>
                    <div class="message">
                        <p style="font-size: 15px">Total Transactions : <b class="text-info">@ViewBag.Trans</b></p>
                    </div>
                    <div>

                    </div>
                    <div class="message">
                        <p style="font-size: 15px">Total Users : <b class="text-info">@ViewBag.User</b></p>
                    </div>
                </div>
            </div>
        </div>
        <!--End of recent updates-->
        <div class="sales-analytics">
            <h2>Analytics</h2>
            <div class="item online">
                <div class="icon">
                    <span class="material-icons-sharp">shopping_cart</span>
                </div>
                <div class="right">
                    <div class="info">
                        <h3>Ongoing Campaigns</h3>
                        <small class="text-muted">Last 24 Hours</small>
                    </div>
                    <h3 class="text-info" style="font-size: 25px">@ViewBag.Oncamp</h3>
                </div>
            </div>
            <div class="item offline">
                <div class="icon">
                    <span class="material-icons-sharp">local_mall</span>
                </div>
                <div class="right">
                    <div class="info">
                        <h3>Pending Actions</h3>
                        <small class="text-muted">Last 24 Hours</small>
                    </div>
                    <h3 class="danger" style="font-size: 25px">@ViewBag.Penaction</h3>
                </div>
            </div>
            <div class="item customers">
                <div class="icon">
                    <span class="material-icons-sharp">local_mall</span>
                </div>
                <div class="right">
                    <div class="info">
                        <h3>Stories Written</h3>
                        <small class="text-muted">Last 24 Hours</small>
                    </div>
                    <h3 class="success" style="font-size: 25px">@ViewBag.Story</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/orders.js"></script>
<script src="~/js/admin_dashboard.js"></script>