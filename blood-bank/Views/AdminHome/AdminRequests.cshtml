<link href="~/css/admin_dashboard.css" rel="stylesheet" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp">
<div class="container">
    <aside>
        <div class="top">
            <h2>Hello, Admin</h2>
            <div class="close" id="close-btn">
                <span class="material-icons-sharp">close</span>
            </div>
        </div>
        <div class="sidebar">
            <a asp-controller="AdminHome" asp-action="AdminHome" style="text-decoration:none; margin-bottom:5px;">
                <i class="bi bi-tools" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Dashboard</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="AdminManagement">
                <i class="bi bi-calendar-check-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Event Management</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="HospitalManagement">
                <i class="bi bi-hospital-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Hospital Management</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminReport" asp-action="AdminReport">
                <i class="bi bi-clipboard2-data-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Reports</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="Users">
                <i class="bi bi-people-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Users</h3>
            </a>
        </div>
    </aside>
    <!-- End of Sidebar -->
    <main>
        <!--End of Insights-->
        <div class="recent-orders">
            <h2>Users</h2>
            <form method="post">
                <div class="border p-3 mt-4">
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">User ID</label>
                        <div class="col-sm-10">
                            <label type="text" readonly class="form-control-plaintext">@ViewBag.id</label>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Status</label>
                        <div class="col-sm-10">
                            <label type="text" readonly class="form-control-plaintext">@ViewBag.status</label>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Date</label>
                        <div class="col-sm-10">
                            <label type="text" readonly class="form-control-plaintext">@ViewBag.date</label>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <label type="text" readonly class="form-control-plaintext">@ViewBag.mail</label>
                        </div>
                    </div>
                    @if(ViewBag.stat == "Donation")
                    {
                        <div class="mb-3 row">
                            <label class="col-sm-2 col-form-label">Amount</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="amount">
                            </div>
                        </div>
                    }
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Action</label>
                        <div class="col-sm-10">
                            <select required name="action"
                                    class="form-control">
                                <option disabled selected>Select Action</option>
                                <option value="Completed">Completed</option>
                                <option value="Pending">Pending</option>
                            </select>
                        </div>
                    </div>
                    @if (ViewBag.stat != "Volunteer")
                    {
                        <div class="mb-3 row">
                            <label class="col-sm-2 col-form-label">location</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="place to complete the task" name="location">
                            </div>
                        </div>
                    }
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Message</label>
                        <div class="col-sm-10">
                            <textarea name="message" class="form-control"></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-primary" style="width:150px;"><i class="bi bi-send-check-fill"></i>Send</button>
                </div>
            </form>
        </div>
    </main>
    <!------End of main ----------->
    <div class="right">
        <div class="top">
            <button id="menu-btn">
                <span class="material-icons-sharp">menu</span>
            </button>
            <div class="theme-toggler">
                <span class="material-icons-sharp active">light_mode</span>
                <span class="material-icons-sharp">dark_mode</span>
            </div>
            <div class="profile">
                <div class="info">
                    <p>Hey, <b>Daniel</b></p>
                    <small class="text-muted">Admin</small>
                </div>
                <div class="profile-photo">
                    <img src="/images/profile-1.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/orders.js"></script>
<script src="~/js/admin_dashboard.js"></script>