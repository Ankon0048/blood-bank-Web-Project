@model List<HospitalData>
<link href="~/css/adminmanagement.css" rel="stylesheet" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp">
<div class="container">
    <aside>
        <div class="top">
            <h2>Hello, Admin</h2>
            <div class="close" id="close-btn">
                <span class="material-icons-sharp">close</span>
            </div>
        </div>
        <div class="sidebar">
            <a asp-controller="AdminHome" asp-action="AdminHome" style="text-decoration:none; margin-bottom:5px;">
                <i class="bi bi-tools" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Dashboard</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="AdminManagement">
                <i class="bi bi-calendar-check-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Event Management</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="HospitalManagement">
                <i class="bi bi-hospital-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Hospital Management</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminReport" asp-action="AdminReport">
                <i class="bi bi-clipboard2-data-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Reports</h3>
            </a>
            <a style="text-decoration:none; margin-bottom:5px;" asp-controller="AdminHome" asp-action="Users">
                <i class="bi bi-people-fill" style="font-size:20px"></i>
                <h3 style="margin-top:6px; font-size:15px">Users</h3>
            </a>
        </div>
    </aside>
    <!-- End of Sidebar -->
    <main>
        <!--End of Insights-->
        <div class="recent-orders">
            <h2>Hospital Detail</h2>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Hospital Name</th>
                        <th>O+</th>
                        <th>O-</th>
                        <th>A+</th>
                        <th>A-</th>
                        <th>B+</th>
                        <th>B-</th>
                        <th>AB+</th>
                        <th>AB-</th>
                        <th>Capacity(litres)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.HospitalName</td>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.Opositive</td>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.Onegative</td>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.Apositive</td>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.Anegative</td>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.Bpositive</td>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.Bnegative</td>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.ABpositive</td>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.ABnegative</td>
                            <td class="text-dark" style="font-size:20px; padding-top:15px">@obj.Capacity</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div style="display:flex; justify-content:center">
                <a asp-controller="AdminHome" asp-action="HospitalManagement" class="btn btn-outline-primary"><i class="bi bi-droplet-half"></i>Back to Management</a>
            </div>
        </div>
    </main>
    <!------End of main ----------->
</div>
<script src="~/js/orders.js"></script>
<script src="~/js/admin_dashboard.js"></script>