@model Userprofile
<link href="~/css/donate_blood.css" rel="stylesheet" />

<div class="form-out-div">
    <div class="nece">
        <div class="nece_2">
            <div class="out-contain">
                <div class="in-contain">
                    <div>
                        <img src="~/images/product/sign up-amico.png" />
                    </div>
                    <div>
                        <form style="width: 390px;"
                              method="post" enctype="multipart/form-data">
                            <span class="form-span"> Create Account </span>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       placeholder="Full Name"
                                       required
                                       asp-for="UserName" />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="Address"
                                       placeholder="Address"
                                       required />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="Number"
                                       placeholder="Contact Number"
                                       required />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="NID"
                                       placeholder="NID or Birth Certificate ID"
                                       required />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="DateOfBirth"
                                       placeholder="Date(DD.MM.YYYY)"
                                       required />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="Email"
                                       placeholder="Email" />
                                <span class="shadow-input"></span>
                            </div>
                            <div style="display: flex; justify-content: space-between;">
                                <div class="wrap-input">
                                    <label for="blood-group"></label>
                                    <select asp-for="Bloodgrp"
                                            class="in">
                                        <option disabled selected>Select Blood Group</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                    </select>
                                </div>
                            </div>
                            <div style="display: flex; justify-content: space-between;">
                                <div class="wrap-input">
                                    <label for="blood-group"></label>
                                    <select asp-for="Gender"
                                            class="in">
                                        <option disabled selected>Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="text"
                                       asp-for="UserID"
                                       placeholder="UserID" />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="password"
                                       asp-for="Password"
                                       placeholder="Password" />
                                <span class="shadow-input"></span>
                            </div>
                            <div class="wrap-input">
                                <input class="in"
                                       type="file"
                                       name="pfile"
                                       placeholder="ImageURL" />
                                <span class="shadow-input"></span>
                            </div>
                            <div style="
                        display: flex;
                        flex-wrap: wrap;
                        justify-content: center;
                      ">
                                <button class="sub-btn" type="submit">
                                    <span>Sign Up</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>